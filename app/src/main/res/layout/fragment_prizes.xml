<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#066407"
    tools:context=".view.fragments.PrizesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:background="@drawable/background_cl_prizes1"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:id="@+id/id_prizes_cs"
            android:layout_marginBottom="100dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.3"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:id="@+id/constraintLayout1"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/constraintLayout2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintHeight_percent="1.0">

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:id="@+id/id_prizes_tv1"
                    android:text="-"
                    android:textStyle="italic"
                    android:textColor="@color/white"
                    android:textSize="70sp"
                    android:layout_height="match_parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@+id/constraintLayout1"
                app:layout_constraintEnd_toStartOf="@+id/constraintLayout3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintHeight_percent="1.0">

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:id="@+id/id_prizes_tv2"
                    android:text="-"
                    android:textStyle="italic"
                    android:textColor="@color/white"
                    android:textSize="70sp"
                    android:layout_height="match_parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@+id/constraintLayout2"
                app:layout_constraintEnd_toStartOf="@+id/constraintLayout4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintHeight_percent="1.0">

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:id="@+id/id_prizes_tv3"
                    android:text="-"
                    android:textStyle="italic"
                    android:textColor="@color/white"
                    android:textSize="70sp"
                    android:layout_height="match_parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@+id/constraintLayout3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.25"
                app:layout_constraintHeight_percent="1.0">

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:text="$"
                    android:textStyle="italic"
                    android:textColor="@color/white"
                    android:textSize="70sp"
                    android:layout_height="match_parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>





        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:text="get a prize"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginTop="50dp"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintHeight_percent="0.1"
            android:textColor="@color/white"
            android:background="@drawable/background_button2_prizes"
            android:id="@+id/id_prizes_button_get"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toBottomOf="@id/id_prizes_cs"
            android:layout_height="0dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:text="into menu"
            android:enabled="false"
            android:textSize="25sp"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintHeight_percent="0.1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/background_button2_prizes"
            android:id="@+id/id_prizes_button_into_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/id_prizes_button_get"
            android:layout_height="0dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>