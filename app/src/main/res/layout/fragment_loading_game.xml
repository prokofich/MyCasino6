<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#066407"
    android:layout_height="match_parent"
    tools:context=".view.fragments.LoadingGameFragment">

    <ScrollView
        android:id="@+id/id_loading_scroll"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.6"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/id_loading_tv1"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.6"
            android:gravity="center"
            android:textStyle="italic"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/id_loading_cs1"
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/id_loading_scroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.1">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:text="win X 2"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/background_button1_reg"
            android:id="@+id/id_loading_button_win"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/id_loading_button_nichya"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:text="draw X 8"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/background_button1_reg"
            app:layout_constraintStart_toEndOf="@id/id_loading_button_win"
            android:id="@+id/id_loading_button_nichya"
            app:layout_constraintEnd_toStartOf="@id/id_loading_button_loss"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:text="loss X 3"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/background_button1_reg"
            app:layout_constraintStart_toEndOf="@id/id_loading_button_nichya"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/id_loading_button_loss"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:id="@+id/id_loaing_cs1"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.1"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_loading_cs1">

        <EditText
            android:gravity="center"
            android:hint="10$"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:id="@+id/id_loading_et1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:id="@+id/id_loading_button_next"
        android:text="next"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:background="@drawable/background_button1_reg"
        android:layout_marginTop="10dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/id_loaing_cs1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="0dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>